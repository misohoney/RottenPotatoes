<p id="notice"><%= notice %></p>
<div id="MovieShowHolder">
  <div id="MovieCol">
    <p>
      <strong>Title:</strong>
      <%= @movie.title %>
    </p>

    <p>
      <strong>Release on:</strong>
      <%= @movie.release_on %>
    </p>

    <p>
      <img id="Poster" src=<%= @movie.poster %>>
    </p>

    <p>
      <p><%= image_tag (movieRating(@movie.reviews)), id: "RatingIcon" %></p>
    </p>
    
    <%= link_to 'Leave a review', new_movie_review_path(@movie)%>

  </div>
  <div id="ReviewCol">
    <strong>Reviews</strong>
    <% @movie.reviews.each do |review| %>
      <div>
        <p><%= review.user_name %></p>
        <p><%= review.created_at %></p>
        <p><%= image_tag (reviewRating(review)), id: "RatingIcon" %></p>
        <p><%= review.comment %></p>
      </div>
    <% end %>
  </div>
</div>


